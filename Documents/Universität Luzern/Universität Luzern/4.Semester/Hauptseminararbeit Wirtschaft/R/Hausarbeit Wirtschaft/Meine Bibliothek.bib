	journal = {Philos. Technol.},
	author = {Marin, Lavinia},
	month = aug,
	year = {2022},
	keywords = {Epistemic agency, Epistemic environment, Epistemic sensitivity, Situated cognition, Skilled action, Social networking platforms},
