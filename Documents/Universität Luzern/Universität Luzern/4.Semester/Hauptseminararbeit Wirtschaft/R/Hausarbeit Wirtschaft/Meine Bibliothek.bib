	author = {Nyholm, Sven},
	month = apr,
	year = {2024},
	keywords = {Attribution Theory, Cognitive Dissonance, Game Theory, Gamificiation, Intrinsic Motivation, Placebo Effect, Praise and blame, Responsibility gaps, Side effects, The doctrine of double effect, The Knobe effect, Utilitarianism},
	pages = {4},
